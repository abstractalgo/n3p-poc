{
  "name": "n3p-poc",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "bun run eslint --version && turbo run lint",
    "typecheck": "bun run tsc --version && turbo run typecheck",
    "fmt": "prettier --write \"**/*.{ts,tsx,md,json,mjs}\""
  },
  "devDependencies": {
    "eslint": "*",
    "prettier": "^3.5.3",
    "turbo": "^2.5.2"
  },
  "packageManager": "bun@1.2.10"
}
